{
  "name": "dgm-theme",
  "version": "1.0.0",
  "description": "Custom WordPress theme for DGM Uruguay",
  "main": "index.php",
  "scripts": {
    "dev": "npm run build:js:watch",
    "build": "npm run build:js",
    "build:js": "webpack --mode=production",
    "build:js:watch": "webpack --mode=development --watch",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint '**/*.js'",
    "lint:php": "phpcs --standard=WordPress .",
    "format:css": "prettier --write '**/*.css'",
    "format:js": "prettier --write '**/*.js'",
    "format:php": "phpcbf --standard=WordPress ."
  },
  "keywords": [
    "wordpress",
    "theme",
    "dgm",
    "uruguay",
    "automotive"
  ],
  "author": "Alejandro VÃ¡squez",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jquery": "^3.7.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
